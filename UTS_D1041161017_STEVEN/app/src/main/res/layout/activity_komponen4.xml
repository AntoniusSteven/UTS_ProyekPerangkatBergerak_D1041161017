<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Komponen4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/android"
            android:layout_weight=".20"/>


    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Komponen 4 \n Content Provider"
        android:textSize="12pt"
        android:textAlignment="center"
        android:layout_weight=".60"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/android"
            android:layout_weight=".20"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\n\n\nContent Provider dapat membantu aplikasi mengelola akses ke data yang disimpan dengan sendirinya, yang disimpan oleh aplikasi lain, dan memberikan cara untuk membagikan data ke aplikasi lain. content provider membungkus data, dan menyediakan mekanisme untuk mendefinisikan keamanan data. Content Provider adalah antarmuka standar yang menghubungkan data dalam satu proses dengan kode yang berjalan dalam proses lain. Mengimplementasikan content provider memiliki banyak keuntungan. Yang terpenting ialah dapat mengkonfigurasi content provider agar memungkinkan aplikasi lain mengakses dan memodifikasi data aplikasi secara aman."
        android:textSize="8pt"
        android:justificationMode="inter_word"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Berikut merupakan contoh syntax dari Content Provider:"
        android:textSize="8pt"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#808080">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="public class TutListProvider extends ContentProvider {
            \n  private TutListDatabase mDB;
            \n    @Override
            \n     public boolean onCreate() {
            \n      mDB = new TutListDatabase(getContext());
            \n      return true;
            \n     }"
            android:textSize="6pt"/>

    </FrameLayout>

    <Button
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:text="Link Materi"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        android:id="@+id/contentprovider"/>

    </LinearLayout>

</ScrollView>