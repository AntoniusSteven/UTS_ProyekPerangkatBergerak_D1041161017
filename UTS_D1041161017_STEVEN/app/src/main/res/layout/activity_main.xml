<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="komponen-komponen yang ada di android"
        android:layout_gravity="center"
        android:layout_marginTop="-20dp"/>

           <Button
               android:layout_marginTop="20dp"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Activity"
               android:layout_gravity="center"
               android:onClick="komponen1"
               android:background="@color/colorPrimary"/>

            <Button
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Intent"
                android:layout_gravity="center"
                android:onClick="komponen2"
                android:background="@color/colorPrimary"/>

            <Button
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Service"
                android:layout_gravity="center"
                android:onClick="komponen3"
                android:background="@color/colorPrimary"/>

            <Button
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Content Provider"
                android:layout_gravity="center"
                android:onClick="komponen4"
                android:background="@color/colorPrimary"/>

            <Button
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Broadcast Receiver"
                android:layout_gravity="center"
                android:onClick="komponen5"
                android:background="@color/colorPrimary"/>

 </LinearLayout>
